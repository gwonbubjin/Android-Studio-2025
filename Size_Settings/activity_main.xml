<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- layout_width 와 layout_height 가 모두 wrap_content 이므로 가로 세로 길이가 모두 내용물 에 맞춰짐
    <Button
        android:id= "@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버튼1"/> -->

    <!-- layout_height 가 match_parent 이므로 세로로 부모 공간을 모두 차지한다
    <Button
        android:id= "@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="버튼1"/> -->

    <!-- 모두 match_parent 이므로 가로와 세로로 부모공간을 모두 차지한다.-->
    <Button
        android:id= "@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="버튼1"/>

    <!-- layout_width 가 match_parent 이므로 가로 공간 으로 부모 공간을 모두 차지 한다-->
    <!--<Button
        android:id= "@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="버튼1"/>-->

</LinearLayout>